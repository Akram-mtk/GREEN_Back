generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// FIXME: national_id infos, also complet updating
model Users {
  id           String         @id @default(uuid()) @db.Uuid
  first_name   String
  last_name    String
  email        String         @unique @db.VarChar(255)
  phone        String?        @db.VarChar(20)
  password     String         @db.VarChar(255)
  is_active    Boolean        @default(true)
  created_at   DateTime       @default(now()) @db.Timestamptz(0)

  EntryLog     EntryLog[]
  Rfid_cards   Rfid_cards[]
  Subscription UserSubscription[]
  Ticket       Ticket[]
}

model EntryLog {
  id       String   @id @default(uuid()) @db.Uuid
  user_id  String   @db.Uuid
  event_id String   @db.Uuid
  date     DateTime @default(now())
  Event    Event    @relation(fields: [event_id], references: [id])
  Users    Users    @relation(fields: [user_id], references: [id])

  @@unique([user_id, event_id])
}

model Area {
  id     String   @id @default(uuid()) @db.Uuid
  name   String

  EventCapacityAllocation EventCapacityAllocation[]
  subscriptionPlans       SubscriptionPlan[]
}

// FIXME : hada sur ytbadal
model Rfid_cards {
  id       String       @id @default(uuid()) @db.Uuid
  owner_id String?      @db.Uuid
  card_uid String       @unique @db.VarChar(64)
  status   CardStatus   @default(issued)
  created_at DateTime  @db.Timestamptz(0) @default(now())
  updated_at DateTime  @db.Timestamptz(0) @updatedAt

  owner Users? @relation(fields: [owner_id], references: [id])
}



// FIXME : open_ay, close_at are useless
model Event {
  id             String   @id @default(uuid()) @db.Uuid
  name           String
  any_gate_entry Boolean
  open_at        DateTime
  close_at       DateTime
  start_at     DateTime
  home_team_id   String    @db.Uuid
  away_team_id   String    @db.Uuid
  published      Boolean   @default(false)

  home_team Team @relation("HomeTeam", fields: [home_team_id], references: [id])
  away_team Team @relation("AwayTeam", fields: [away_team_id], references: [id])

  EntryLog                EntryLog[]
  EventCapacityAllocation EventCapacityAllocation[]
  Ticket                  Ticket[]
}

// FIXME : contraint available_seats GE 0
model EventCapacityAllocation {
  id              String   @id @default(uuid()) @db.Uuid
  event_id        String   @db.Uuid
  area_id         String   @db.Uuid
  available_seats Int

  Area            Area     @relation(fields: [area_id], references: [id])
  Event           Event    @relation(fields: [event_id], references: [id])

  Ticket          Ticket[]

  @@unique([event_id, area_id])
}

// NOTE : areaID, event_id rahom ziada w nrmlment mns79ohomch 3ljl performance (hadi tcree pb ta3 unique)
model Ticket {
  id                      String                  @id @default(uuid()) @db.Uuid
  allocation_id           String                  @db.Uuid
  user_id                 String                  @db.Uuid
  confirmed               Boolean                 @default(false)
  used                    Boolean                 @default(false)
  event_id                String                  @db.Uuid


  EventCapacityAllocation EventCapacityAllocation @relation(fields: [allocation_id], references: [id])
  Event                   Event                   @relation(fields: [event_id], references: [id])
  Users                   Users                   @relation(fields: [user_id], references: [id])

  @@unique([event_id, user_id])
}


model Team {
  id          String   @id @default(uuid()) @db.Uuid
  name        String   @unique
  short_name  String   @unique
  imageUrl    String

  home_events Event[] @relation("HomeTeam")
  away_events Event[] @relation("AwayTeam")
}


model SubscriptionPlan{
  id                 String   @id @default(uuid()) @db.Uuid
  name               String
  description        String?
  price              Decimal @db.Decimal(10, 2)
  number_of_entrance Int?
  area_id            String   @db.Uuid
  is_active          Boolean  @default(true)

  area  Area @relation(fields: [area_id],  references: [id])

  userSubscriptions  UserSubscription[]
}

// FIXME : can a user have two subs at the same time ?
model UserSubscription {
  id                   String   @id @default(uuid()) @db.Uuid
  owner_id             String   @db.Uuid
  subscription_plan_id String   @db.Uuid
  entrance_left        Int?

  owner        Users            @relation(fields: [owner_id], references: [id])
  subscription SubscriptionPlan @relation(fields: [subscription_plan_id], references: [id])
}



enum CardStatus {
  issued
  active
  blocked
}
