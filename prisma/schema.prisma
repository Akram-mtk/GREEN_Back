generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Users {
  id            String      @id @default(dbgenerated("NEWID()")) @db.UniqueIdentifier
  first_name    String
  last_name     String
  email         String      @unique
  phone         String?
  password_hash String
  is_active     Boolean     @default(true)
  created_at    DateTime    @default(now()) @db.DateTime2
  last_login    DateTime?   @db.DateTime2
  updated_at    DateTime?   @default(now()) @db.DateTime2

  rfid_cards    RfidCards[]
}

model RfidCards {
  id           String   @id @default(dbgenerated("NEWID()")) @db.UniqueIdentifier
  user_id      String?  @db.UniqueIdentifier
  hashed_uid   String   @unique
  status       String   @default("issued")  // changed from enum to string
  issued_at    DateTime @default(now()) @db.DateTime2
  last_used_at DateTime? @db.DateTime2

  user         Users?   @relation(fields: [user_id], references: [id], onDelete: SetNull)
}


model SeatCategories {
  id          String  @id @default(dbgenerated("NEWID()")) @db.UniqueIdentifier
  name        String
  description String?

  seats       Seats[]
}

model Seats {
  id          String  @id @default(dbgenerated("NEWID()")) @db.UniqueIdentifier
  section     String?
  row         String?
  number      String?
  category_id String? @db.UniqueIdentifier

  category    SeatCategories? @relation(fields: [category_id], references: [id])

  @@unique([section, row, number])
}

model Gates {
  id          String   @id @default(dbgenerated("NEWID()")) @db.UniqueIdentifier
  code        String   @unique
  description String?
  created_at  DateTime @default(now()) @db.DateTime2
}


